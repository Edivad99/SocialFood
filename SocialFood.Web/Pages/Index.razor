@page "/"
@attribute [Authorize]
@inject HttpClient HttpClient

<PageTitle>Home</PageTitle>

<AuthorizeView>
    <h2>Bentornato, @context.User.GetFirstName()!</h2>
</AuthorizeView>

@if (images.Any())
{
    <p>Ecco quello che è successo nelle scorse ore!</p>

    @foreach (var image in images)
    {
        <ImageView image="image" />
    }
}
else
{
    <p>Nessuna immagine caricata</p>
}





@code{
    List<ImageDTO> images = new();

    protected override async Task OnInitializedAsync()
    {
        var responseMessage = await HttpClient.GetAsync("/api/Image/myimages");
        if (responseMessage.IsSuccessStatusCode)
        {
            images = await responseMessage.Content.ReadFromJsonAsync<List<ImageDTO>>();
        }
        else
        {
            images.Clear();
        }
    }
}
