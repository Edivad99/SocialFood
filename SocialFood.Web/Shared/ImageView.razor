@inject HttpClient HttpClient

<div class="card">
    <img src="@GetImageUrl()" class="card-img-top" alt="@image.Descrizione">
    <div class="card-body">
        <h5 class="card-title">@image.Descrizione</h5>
        <p class="card-text">@image.Luogo</p>
    </div>
    <ul class="list-group list-group-flush">
        <li class="list-group-item">@(new Random().Next(100)) likes <a href="#" class="card-link">Mi piace</a></li>
    </ul>
    <div class="card-footer">
        <small class="text-muted">Caricata il @image.Ora.ToShortDateString()</small>
    </div>
</div>

@code {
    [Parameter]
    public ImageDTO image { get; set; }

    string GetImageUrl() => HttpClient.BaseAddress + "api/Image/" + image.Id;
}

