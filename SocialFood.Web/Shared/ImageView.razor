@inject HttpClient HttpClient

<div class="card" style="width: 18rem;">
    <img src="@GetImageUrl()" class="card-img-top" alt="@image.Descrizione">
    <div class="card-body">
        <p class="card-text">@image.Descrizione</p>
    </div>
    <ul class="list-group list-group-flush">
        <li class="list-group-item">@image.Luogo</li>
        <li class="list-group-item">Il @image.Ora.ToShortDateString()</li>
        <li class="list-group-item">@(new Random().Next(100)) likes</li>
    </ul>
    <div class="card-body">
        <a href="#" class="card-link">Mi piace</a>
        <a href="#" class="card-link">Visualizza il profilo</a>
    </div>
</div>

@code {
    [Parameter]
    public ImageDTO image { get; set; }


    string GetImageUrl() => HttpClient.BaseAddress + "api/Image/" + image.Id;
}

